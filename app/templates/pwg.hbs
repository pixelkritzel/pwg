{{outlet}}

<div class="pwg_selected-service-container">
  {{ input value=selectedService focus-in="selectedServiceGainsFocus" key-up="selectedServiceKeyUp" class="pwg_input-service form-control" placeholder="Service Name" }}

  {{#if showServiceList}}
    <div style="position:relative">
      <ul class="pwg_filtered-services">
        {{#each service in filteredServices}}
          <li>
            <button class="btn btn-link pwg_filtered-service--name" type="button" role="button" {{action 'setSelectedService' service.serviceName}}>
              {{ service.serviceName }}
            </button>
            <button class="btn pwg_filtered-service--remove" type="button" role="button"
                    {{action 'removeService' service}}>
              &times;
            </button>
          </li>
        {{/each}}
        {{#if isSaveAble}}
          <li><button class="btn btn-link" type="button" role="button" {{action 'saveService' service.serviceName}}>Save Service</button></li>
        {{/if}}
      </ul>
    </div>
  {{/if}}
</div>

{{ input value=salt action="generatePassword" on="enter" class="pw_input-phrase js-salt form-control" placeholder="Secret Phrase"}}

<div class="pwg_generate-button-container">
  <button type="button" {{action 'generatePassword' }} class="btn">Generate!</button>
</div>